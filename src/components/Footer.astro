---
import information from "../collections/information.json";
import menu from "../collections/menu.json";
import social from "../collections/social.json";

const BASE = "";
---

<div class="grid place-items-center bg-base-300">
    <footer
        class="footer bg-base-300 text-base-content py-10 px-10 md:w-4/5 md:px-0"
    >
        <nav>
            <h6 class="footer-title">{information.nameCompany}</h6>
            <a href=`${BASE}/`>
                <img
                    class="max-w-60"
                    src=`${BASE}/assets/img/logo.png`
                    alt={information.nameCompany}
                    title={information.nameCompany}
                />
            </a>
        </nav>
        <nav>
            <h6 class="footer-title">Servicios</h6>
            {
                menu.map((m) => {
                    return (
                        <a class="link link-hover" href=`${BASE}${m.url}`>
                            <i class="fa-solid fa-angles-right mr-2" />
                            {m.name}
                        </a>
                    );
                })
            }
        </nav>
        <nav>
            <h6 class="footer-title">Links</h6>
            {
                menu.map((m) => {
                    return (
                        <a class="link link-hover" href=`${BASE}${m.url}`>
                            <i class="fa-solid fa-angles-right mr-2" />
                            {m.name}
                        </a>
                    );
                })
            }
        </nav>
        <nav>
            <h6 class="footer-title">Redes sociales</h6>
            {
                social.map((s) => {
                    return (
                        <a class="link link-hover" href={s.url} target="_blank">
                            <i class={s.class} />
                            {s.name}
                        </a>
                    );
                })
            }
        </nav>
    </footer>
</div>
<footer
    class="footer bg-base-300 text-base-content border-base-300 border-t px-10 py-5"
>
    <aside class="grid-flow-col items-center">
        <a href=`${BASE}/`>
            <img
                src=`${BASE}/assets/img/logo-50x50.png`
                alt={information.nameCompany}
                title={information.nameCompany}
            />
        </a>
        <p>
            {information.nameCompany}
            <br />
            &copy; <span id="year"></span>. {information.name}. Todos los
            derechos reservados.
        </p>
    </aside>
    <nav class="md:place-self-center md:justify-self-end">
        <div class="grid grid-flow-col gap-4">
            {
                social.map((s) => {
                    return (
                        <a href={s.url} target="_blank">
                            <i class={s.class} style="scale: 1.5;" />
                        </a>
                    );
                })
            }
        </div>
    </nav>
</footer>
