---
import menu from "../collections/menu.json";

interface Props {
    id: number;
}
const { id } = Astro.props;
const data = menu.find((item) => item.id === id);

const BASE = import.meta.env.BASE_URL; 
---

<div class="grid place-items-center bg-base-200">
    <div class="breadcrumbs text-sm md:w-4/5">
        <ul>
            {
                data.route.map((d) => {
                    return (
                        <li>
                            <a href=`${BASE}${d.url}`>{d.name}</a>
                        </li>
                    );
                })
            }
        </ul>
    </div>
</div>
